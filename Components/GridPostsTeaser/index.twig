<div class="flyntComponent {{ options.theme ?: 'themeLight' }}" is="flynt-grid-posts-teaser">
  <div class="container centerMaxWidthContainer">
    {% if preContentHtml %}
      <div class="preContent centerContentMaxWidth">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <ul class="grid grid--length{{ items|length }}">
      {% for item in items %}
        <li class="grid-item">
          <a href="{{ item.link }}" class="content">
            <img class="content-image lazyload"
              src="{{ item.thumbnail|resize(750, 500) }}"
              srcset="{{ placeholderImage(3, 2) }}"
              data-srcset="
                {{ item.thumbnail|resize(1920, 1280) }} 1920w,
                {{ item.thumbnail|resize(1280, 853) }} 1280w,
                {{ item.thumbnail|resize(1050, 700) }} 1050w,
                {{ item.thumbnail|resize(750, 500) }} 750w,
                {{ item.thumbnail|resize(600, 400) }} 600w,
                {{ item.thumbnail|resize(480, 320) }} 480w,
                {{ item.thumbnail|resize(312, 208) }} 312w"
              data-sizes="auto"
              alt="{{ item.thumbnail.alt|e }}">
            <div class="content-inner">
              <header class="content-header">
                <div class="content-block">
                  <span class="pill">{{ item.category.name }}</span>
                </div>
                <div>
                  <time class="time" datetime="{{ item.date|date("Y-m-d") }}">
                    <span class="time-icon">
                        <i data-feather="clock"></i>
                    </span>
                    <span class="time-main">
                      {{ item.date }}
                    </span>
                  </time>
                </div>
              </header>
              <h3 class="content-title">{{ item.title }}</h3>
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>
    <div class="postContent">
      <a href="{{ postTypeArchiveLink }}" class="button button--link">{{ labels.allPosts }}</a>
    </div>
  </div>
</div>
