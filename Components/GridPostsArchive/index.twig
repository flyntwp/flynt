
<div class="flyntComponent {{ options.theme }}" is="flynt-grid-posts-archive">
  <div class="container centerMaxWidthContainer">
    <div class="preContent">
      <h1>{{ title }}</h1>
      {% set html = isHome ? preContentHtml : description%}
      {{ html|e('wp_kses_post') }}
    </div>
    {% if terms %}
       {% include 'Partials/Filter/index.twig' %}
    {% endif %}
    <ul class="posts">
      {% for post in posts %}
        <li class="post">
          <a class="post-link" href="{{ post.link }}"{% if post.target == '_blank' %} target="_blank" rel="noreferrer noopener"{% endif %} title="{{ post.title|e }}">
            {% if post.thumbnail %}
              <figure class="figure">
                <img class="figure-image lazyload"
                  src="{{ post.thumbnail|resize(424, 283) }}"
                  srcset="{{ placeholderImage(424, 283) }}"
                  data-srcset="
                    {{ post.thumbnail|resize(1280, 853) }} 1280w,
                    {{ post.thumbnail|resize(750, 500) }} 750w,
                    {{ post.thumbnail|resize(424, 283) }} 424w,
                    {{ post.thumbnail|resize(375, 250) }} 375w"
                  data-sizes="auto"
                  alt="{{ post.thumbnail.alt|e }}">
              </figure>
            {% endif %}
            <h3 class="h3 post-title">
              {{ post.title }}
            </h3>
          </a>
          <p class="post-preview">
            {{ post.preview.read_more(false) }}
          </p>
          <a class="button button--link" href="{{ post.link }}"{% if post.target == '_blank' %} target="_blank" rel="noreferrer noopener"{% endif %} title="{{ post.title|e }}">{{ labels.readMore }}</a>
        </li>
      {% else %}
        <p class="posts-empty">{{ labels.noPostsFound }}</p>
      {% endfor %}
    </ul>
    {% set pagination = posts.pagination %}
    {% if pagination.pages %}
      {% include 'Partials/PaginationButtons/index.twig' %}
    {% endif %}
  </div>
