<div is="flynt-block-cookie-notice" class="flyntComponent boxShadow {{ layout }} {{ theme ?: 'themeReset' }}">
  <div class="container centerMaxWidthContainer">
    <div class="content">
      {{ contentHtml|e('wp_kses_post') }}
    </div>
    <button type="button" class="button button--small button--ghost" aria-label="Decline" data-decline>{{ declineButtonLabel|e }}</button>
    <button type="button" class="button button--small" aria-label="Accept" data-accept>{{ acceptButtonLabel|e }}</button>
  </div>
</div>
