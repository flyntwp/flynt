<div class="flyntAnchorLinkCopy">
  <div class="flyntAnchorLinkCopy-container">
    <input type="text" class="flyntAnchorLinkCopy-input" data-href="{{ href|e }}" readonly value="{{ href|e }}#">
    <div class="flyntAnchorLinkCopy-button">
      <button data-copy-anchor-link aria-label="{{ __("Copy to clipboard", "flynt") }}" title="{{ __("Copy to clipboard", "flynt") }}">{{ copyIcon }}</button>
    </div>
    <span class="flyntAnchorLinkCopy-message" data-copy-message>{{ copiedMessage }}</span>
  </div>
</div>
