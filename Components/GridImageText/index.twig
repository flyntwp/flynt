<div class="flyntComponent {{ options.theme }} {{ options.card ? 'layoutCard' }}" is="flynt-grid-image-text">
  <div class="container centerMaxWidthContainer">
    {% if preContentHtml %}
      <div class="preContent">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <ul class="grid grid--length{{ items|length }}">
      {% for item in items %}
        <li class="grid-item">
          <div class="content {{ options.card == 'layoutCard' ? 'boxShadow' }}">
            <img class="content-image lazyload"
              src="{{ item.image.src|resize(750, 500) }}"
              srcset="{{ placeholderImage(3, 2) }}"
              data-srcset="
                {{ item.image.src|resize(1920, 1280) }} 1920w,
                {{ item.image.src|resize(1280, 853) }} 1280w,
                {{ item.image.src|resize(1050, 700) }} 1050w,
                {{ item.image.src|resize(750, 500) }} 750w,
                {{ item.image.src|resize(600, 400) }} 600w,
                {{ item.image.src|resize(480, 320) }} 480w,
                {{ item.image.src|resize(312, 208) }} 312w"
              data-sizes="auto"
              alt="{{ item.image.alt|e }}">
            <div class="content-inner {{ options.card == 'layoutCard' ? 'boxPadding' }}">
              {{ item.contentHtml|e('wp_kses_post') }}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
