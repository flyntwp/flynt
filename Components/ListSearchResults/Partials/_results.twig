{% if posts|length > 0 %}
  <ul role="list" class="results flowContent">
    {% for post in posts  %}
      <li class="result boxBorder boxPadding" data-theme="reset">
        <article class="flowContent">
            <h2 class="h5">{{ post.title }}</h2>
            <p>{{ post.excerpt.read_more(false) }}</p>
            <footer>
              <a href="{{ post.link }}" aria-label="{{ post.title }}" class="link">{{ labels.readMore }}</a>
            </footer>
        </article>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <div class="noResults">
    <p>{{ labels.noResults }}</p>
  </div>
{% endif %}
