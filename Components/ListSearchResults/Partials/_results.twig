{% if posts|length > 0 %}
  <ul class="searchList boxShadow themeReset">
    {% for post in posts  %}
      <li class="searchList-item boxPadding">
        <article class="post">
          <h3><a href="{{ post.link }}">{{ post.title }}</a></h3>
          <p>{{ post.preview.length(40).read_more(false) }}</p>
          <footer class="post-footer">
            <a href="{{ post.link }}" class="button button--link">{{ labels.readMore }}</a>
          </footer>
        </article>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <div class="noResults boxPadding">
    <p>{{ labels.noResults }}</p>
  </div>
{% endif %}
